<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Width="500" Height="300"
		xmlns:vm="clr-namespace:storage.ViewModels"
        x:Class="storage.Views.CategoryEditWindow"
        Title="CategoryEditWindow"
	    x:DataType="vm:CategoryEditWindowModel">
	<StackPanel>
		<TextBlock Margin="0 5" FontSize="18" FontWeight="Bold">Название категории</TextBlock>
		<TextBox Text="{Binding Name, Mode=TwoWay}" Margin="20" Watermark="Название материала" />
		<TextBlock Margin="0 5" FontSize="18" FontWeight="Bold">Еденица измнерения</TextBlock>
		<TextBox Text="{Binding MeasureUnit, Mode=TwoWay}" Margin="20" Watermark="Единица измерения" />
		<Button Content="Сохранить" Margin="20" Click="Save_OnClick"/>
	</StackPanel>
</Window>

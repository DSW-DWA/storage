<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="500" Height="300"
        xmlns:vm="clr-namespace:storage.ViewModels"
        x:Class="storage.Views.InvoiceEditWindow"
        Title="InvoiceEditWindow"
        x:DataType="vm:InvoiceEditWindowModel">
    <StackPanel>
		<TextBlock Margin="0 5" FontSize="18" FontWeight="Bold">Дата накладной</TextBlock>
        <DatePicker SelectedDate="{Binding CreatedAt, Mode=TwoWay}" Margin="20" />
		<TextBlock Margin="0 5" FontSize="18" FontWeight="Bold">Время накладой</TextBlock>
		<TimePicker SelectedTime="{Binding CreatedAtTime, Mode=TwoWay}" ClockIdentifier="24HourClock" MinuteIncrement="1" Margin="20"/>
		<Button Content="Сохранить" Margin="20" Click="Save_OnClick"/>
    </StackPanel>
</Window>
